---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Essays" description="Longer form writing and extended thoughts">
    <main class="container">
        <h1>Essays</h1>
        <p>Longreads for extended thoughts, and deeper exploration.</p>

        <div style="margin-top: 2rem; padding: 1rem; background: var(--bg-secondary); border: 1px solid var(--border-color);">
            <p style="font-family: var(--font-mono); font-size: var(--text-sm); color: var(--text-secondary);">
                Essays will appear here once we set up content collections.
            </p>
        </div>
    </main>
</BaseLayout>