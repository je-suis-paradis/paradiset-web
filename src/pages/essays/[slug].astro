---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all essays for static generation
export async function getStaticPaths() {
  const essays = await getCollection('essays');
  return essays.map(essay => ({
    params: { slug: essay.slug },
    props: { essay },
  }));
}

const { essay } = Astro.props;
const { Content } = await essay.render();
---

<BaseLayout title={essay.data.title} description={essay.data.description}>
  <article class="container essay">
    <header class="essay-header">
      <h1>{essay.data.title}</h1>
      <time datetime={essay.data.publishDate.toISOString()}>
        {essay.data.publishDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
      </time>
      <p class="essay-description">{essay.data.description}</p>
    </header>

    <div class="essay-content">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .essay {
    max-width: 65ch;
  }

  .essay-header {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-lg);
    border-bottom: 2px solid var(--border-color);
  }

  .essay-header h1 {
    margin-bottom: var(--space-sm);
  }

  .essay-header time {
    display: block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-secondary);
    margin-bottom: var(--space-md);
  }

  .essay-description {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    font-style: italic;
  }

  .essay-content {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
  }

  .essay-content h2 {
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
  }

  .essay-content p {
    margin-bottom: var(--space-md);
  }
</style>